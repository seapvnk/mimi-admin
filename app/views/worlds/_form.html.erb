<%= form_with(model: world) do |form| %>
  <% if world.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(world.errors.count, "error") %> prohibited this world from being saved:</h2>

      <ul>
        <% world.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :timeline_id, style: "display: block" %>
    <%= form.collection_select :timeline_id, @timelines, :id, :id, prompt: "Select a timeline" %>
  </div>

  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
